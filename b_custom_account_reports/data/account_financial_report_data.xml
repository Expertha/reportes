<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Account Balance Trial Report Actions -->
        <record id="action_custom_trial_balance" model="ir.actions.client">
            <field name="name">Custom Trial Balance</field>
            <field name="tag">account_report</field>
            <field name="context" eval="{'model': 'custom.trial.balance'}"/>
        </record>

        <record id="action_account_report_rs" model="ir.actions.client">
            <field name="name">Result Status Report</field>
            <field name="tag">account_report</field>
            <field name="context"
                   eval="{'model': 'account.financial.html.report', 'id': ref('result_state_report')}"/>
        </record>

        <menuitem id="menu_custom_reports" name="Custom Reports" parent="account.menu_finance_reports" sequence="0"/>

        <menuitem id="menu_result_status_report"
                  name="Result Status Report"
                  parent="menu_custom_reports"
                  action="action_account_report_rs"/>

        <!-- Account Balance Trial Menu  -->
        <menuitem id="menu_custom_trial_balance"
                  name="Custom Trial Balance"
                  parent="menu_custom_reports"
                  action="action_custom_trial_balance"/>
    </data>
</odoo>